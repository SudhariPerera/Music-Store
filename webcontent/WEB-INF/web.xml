<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
		xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" 
		version="4.0">
        
	<servlet>
			<servlet-name>ValidateDetails</servlet-name>
			<servlet-class>com.Verify.verifyLoginServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
			<servlet-name>ValidateDetails</servlet-name>
			<url-pattern>/login</url-pattern>
	</servlet-mapping>
		
	<servlet>
			<servlet-name>SavedCard</servlet-name>
			<servlet-class>com.Verify.SavedCardServlet</servlet-class>
	</servlet> 
		
	<servlet-mapping>
			<servlet-name>SavedCard</servlet-name>
			<url-pattern>/Already</url-pattern>		
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AddCard</servlet-name>
		<servlet-class>com.payment.AddCard</servlet-class>
	</servlet> 
	
	<servlet-mapping>
		<servlet-name>AddCard</servlet-name>
		<url-pattern>/AddCard</url-pattern>
	
	</servlet-mapping>
	
		<servlet>
		<servlet-name>UpdateCard</servlet-name>
		<servlet-class>com.payment.UpdateCardServlet</servlet-class>
	</servlet> 
	
	<servlet-mapping>
		<servlet-name>UpdateCard</servlet-name>
		<url-pattern>/UpdateCard</url-pattern>
	
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deleteCard</servlet-name>
		<servlet-class>com.payment.deleteCardServlet</servlet-class>
	</servlet> 
	
	<servlet-mapping>
		<servlet-name>deleteCard</servlet-name>
		<url-pattern>/deleteCard</url-pattern>
	
	</servlet-mapping>
</web-app>